---
import { db, DownloadLink, eq } from 'astro:db';

const downloadLinks = await db.select().from(DownloadLink).where(eq(DownloadLink.isActive, true)).limit(1);
const downloadLink = downloadLinks[0] || {
  url: 'https://store.steampowered.com/app/4193250/One_Less_Choice/',
  description: 'Default Steam store page'
};
---

<section id="download" class="relative py-32 px-4 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-[#050505] via-[#0a0808] to-[#050505]"></div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-[#8b0000]/5 rounded-full blur-[150px]"></div>
  
  <!-- Decorative lines -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-[#8b0000]/30 to-transparent"></div>

  <div class="relative z-10 max-w-5xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <p class="font-mono text-sm text-[#8b0000] tracking-[0.3em] uppercase mb-4">Ready to Play</p>
      <h2 class="font-serif text-4xl md:text-5xl lg:text-7xl tracking-[0.1em] uppercase text-[#d1d1d1] chromatic-hover">
        Download Now
      </h2>
      <p class="mt-6 text-lg text-[#6b6b6b] max-w-xl mx-auto">
        Get One Less Choice on Steam and begin your trial.
      </p>
    </div>

    <!-- Main Card -->
    <div class="relative max-w-lg mx-auto">
      <!-- Card glow effect -->
      <div class="absolute -inset-1 bg-gradient-to-r from-[#8b0000] via-[#ff0000] to-[#8b0000] rounded-lg blur opacity-40"></div>
      
      <div class="relative bg-gradient-to-b from-[#0f0f0f] to-[#0a0a0a] border border-[#2a2a2a]">
        <!-- Scan line effect -->
        <div class="scan-line"></div>
        
        <!-- Card Header -->
        <div class="px-8 py-6 border-b border-[#2a2a2a] bg-[#0d0d0d]">
          <div class="flex items-center gap-4">
            <!-- Game Icon -->
            <div class="relative w-20 h-20 border-2 border-[#8b0000]">
              <img
                src="https://shared.cloudflare.steamstatic.com/store_item_assets/steam/apps/4193250/capsule_184x69.jpg"
                alt="One Less Choice"
                class="w-full h-full object-cover"
              />
            </div>
            
            <div class="flex-1">
              <p class="font-mono text-xs text-[#6b6b6b] tracking-[0.2em] uppercase">
                Available Now
              </p>
              <p class="font-serif text-2xl tracking-wider text-[#d1d1d1]">
                ONE LESS CHOICE
              </p>
            </div>
          </div>
        </div>

        <div class="px-8 py-8">
          <div class="grid grid-cols-3 gap-4 mb-8">
            <div class="text-center p-4 bg-[#0a0a0a] border border-[#2a2a2a]">
              <p class="font-mono text-3xl font-bold text-[#d1d1d1]">4.5</p>
              <p class="font-mono text-xs text-[#4a4a4a] mt-1 tracking-wider">RATING</p>
            </div>
            <div class="text-center p-4 bg-[#0a0a0a] border border-[#8b0000]/30">
              <p class="font-mono text-3xl font-bold text-[#ff4444]">1-2h</p>
              <p class="font-mono text-xs text-[#4a4a4a] mt-1 tracking-wider">PLAYTIME</p>
            </div>
            <div class="text-center p-4 bg-[#0a0a0a] border border-[#2a2a2a]">
              <p class="font-mono text-3xl font-bold text-[#66c0f4]">6GB</p>
              <p class="font-mono text-xs text-[#4a4a4a] mt-1 tracking-wider">SIZE</p>
            </div>
          </div>

          {/* 
            üîß FOR FORKERS: To change the download link, update the database:
            1. Run: npm run astro db push --remote (for production)
            2. Or edit db/seed.ts and run: npm run astro db push (for local)
            3. Update the 'url' field in the DownloadLink table
            
            Current link is fetched from database: {downloadLink.description}
          */}
          <a
            href={downloadLink.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group relative w-full flex items-center justify-center gap-3 px-6 py-5 download-btn text-white glitch-hover overflow-hidden"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
            <span class="text-base tracking-[0.15em] uppercase font-bold">
              Download on Steam
            </span>
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
          </a>

          <p class="mt-6 text-center font-mono text-xs text-[#4a4a4a]">
            Requires Windows 10+ and 6GB RAM
          </p>
          
          {/* Forker notice */}
          <div class="mt-4 p-3 bg-[#1a1a1a] border border-[#2a2a2a] rounded">
            <p class="text-xs text-[#6b6b6b] text-center">
              <span class="text-[#8b0000]">üìù Forked this project?</span> Edit the download link in <code class="text-[#66c0f4]">db/seed.ts</code>
            </p>
          </div>
        </div>

        <div class="absolute top-0 left-0 w-8 h-8 border-t-2 border-l-2 border-[#8b0000] opacity-60"></div>
        <div class="absolute top-0 right-0 w-8 h-8 border-t-2 border-r-2 border-[#8b0000] opacity-60"></div>
        <div class="absolute bottom-0 left-0 w-8 h-8 border-b-2 border-l-2 border-[#8b0000] opacity-60"></div>
        <div class="absolute bottom-0 right-0 w-8 h-8 border-b-2 border-r-2 border-[#8b0000] opacity-60"></div>
      </div>
    </div>

    <div class="mt-16 text-center">
      <p class="font-mono text-sm text-[#8b0000] tracking-[0.3em] uppercase glitch-hover inline-block">
        {">"} WARNING: ONCE YOU START, THERE IS NO GOING BACK {"<"}
      </p>
    </div>

    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="p-6 bg-[#0a0a0a] border border-[#2a2a2a] hover:border-[#8b0000]/50 transition-all">
        <div class="w-12 h-12 bg-[#8b0000]/10 flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-[#8b0000]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>
        <h4 class="font-serif text-lg text-[#d1d1d1] mb-2">Secure Download</h4>
        <p class="font-mono text-xs text-[#6b6b6b]">Official Steam distribution. Safe and verified.</p>
      </div>
      
      <div class="p-6 bg-[#0a0a0a] border border-[#2a2a2a] hover:border-[#8b0000]/50 transition-all">
        <div class="w-12 h-12 bg-[#8b0000]/10 flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-[#8b0000]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
        <h4 class="font-serif text-lg text-[#d1d1d1] mb-2">Instant Access</h4>
        <p class="font-mono text-xs text-[#6b6b6b]">Download and play immediately after purchase.</p>
      </div>
      
      <div class="p-6 bg-[#0a0a0a] border border-[#2a2a2a] hover:border-[#8b0000]/50 transition-all">
        <div class="w-12 h-12 bg-[#8b0000]/10 flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-[#8b0000]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
        </div>
        <h4 class="font-serif text-lg text-[#d1d1d1] mb-2">Auto-Updates</h4>
        <p class="font-mono text-xs text-[#6b6b6b]">Always get the latest version automatically.</p>
      </div>
    </div>
  </div>
</section>
