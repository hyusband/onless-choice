const session = null; // Temporarily disabled

const navLinks = [
  { href: "#game", label: "The Game" },
  { href: "#gallery", label: "Gallery" },
  { href: "#mechanics", label: "Mechanics" },
  { href: "#terminal", label: "Last Words" },
  { href: "#download", label: "Download" },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-[#050505]/95 backdrop-blur-sm border-b border-[#2a2a2a]">
  <div class="max-w-7xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="#game" class="flex items-center gap-3 group">
        <svg 
          viewBox="0 0 100 100" 
          class="w-10 h-10 text-[#8b0000] group-hover:text-[#ff4444] transition-colors heartbeat"
          fill="currentColor"
          aria-label="One Less Choice Logo"
        >
          <circle cx="30" cy="50" r="20" fill="none" stroke="currentColor" stroke-width="4"/>
          <circle cx="30" cy="50" r="4" fill="currentColor"/>
          <rect x="50" y="45" width="45" height="10" rx="2" fill="currentColor"/>
        </svg>
        <div>
          <span class="block font-serif text-xl tracking-[0.2em] text-[#d1d1d1] group-hover:text-white transition-colors">
            ONE LESS CHOICE
          </span>
        </div>
      </a>

      <ul class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="font-mono text-sm text-[#6b6b6b] hover:text-[#d1d1d1] tracking-wider uppercase transition-colors"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <a
        href="https://store.steampowered.com/app/4193250/One_Less_Choice/"
        target="_blank"
        rel="noopener noreferrer"
        class="hidden md:inline-flex items-center gap-2 px-5 py-2 steam-btn text-[#66c0f4] text-sm tracking-wider uppercase transition-all"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M11.979 0C5.678 0 .511 4.86.022 11.037l6.432 2.658c.545-.371 1.203-.59 1.912-.59.063 0 .125.004.188.006l2.861-4.142V8.91c0-2.495 2.028-4.524 4.524-4.524 2.494 0 4.524 2.031 4.524 4.527s-2.03 4.525-4.524 4.525h-.105l-4.076 2.911c0 .052.004.105.004.159 0 1.875-1.515 3.396-3.39 3.396-1.635 0-3.016-1.173-3.331-2.727L.436 15.27C1.862 20.307 6.486 24 11.979 24c6.627 0 11.999-5.373 11.999-12S18.605 0 11.979 0zM7.54 18.21l-1.473-.61c.262.543.714.999 1.314 1.25 1.297.539 2.793-.076 3.332-1.375.263-.63.264-1.319.005-1.949s-.75-1.121-1.377-1.383c-.624-.26-1.29-.249-1.878-.03l1.523.63c.956.4 1.409 1.5 1.009 2.455-.397.957-1.497 1.41-2.454 1.012H7.54zm11.415-9.303c0-1.662-1.353-3.015-3.015-3.015-1.665 0-3.015 1.353-3.015 3.015 0 1.665 1.35 3.015 3.015 3.015 1.663 0 3.015-1.35 3.015-3.015zm-5.273-.005c0-1.252 1.013-2.266 2.265-2.266 1.249 0 2.266 1.014 2.266 2.266 0 1.251-1.017 2.265-2.266 2.265-1.253 0-2.265-1.014-2.265-2.265z"/>
        </svg>
        Steam
      </a>

      {session ? (
        <div class="hidden md:flex items-center gap-3">
          <div class="flex items-center gap-2">
            <img src={session.user?.image} alt="Avatar" class="w-8 h-8 rounded-full border border-[#66c0f4]" />
            <span class="text-sm text-[#d1d1d1]">{session.user?.name}</span>
          </div>
          <a
            href="/api/auth/signout"
            class="px-4 py-2 bg-[#8b0000] hover:bg-[#a50000] text-white text-xs tracking-wider uppercase transition-all"
          >
            Logout
          </a>
        </div>
      ) : (
        <a
          href="/api/auth/signin/steam"
          class="hidden md:inline-flex items-center gap-2 px-5 py-2 bg-[#1b2838] hover:bg-[#2a475e] border border-[#66c0f4]/30 text-[#66c0f4] text-sm tracking-wider uppercase transition-all"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M11.979 0C5.678 0 .511 4.86.022 11.037l6.432 2.658c.545-.371 1.203-.59 1.912-.59.063 0 .125.004.188.006l2.861-4.142V8.91c0-2.495 2.028-4.524 4.524-4.524 2.494 0 4.524 2.031 4.524 4.527s-2.03 4.525-4.524 4.525h-.105l-4.076 2.911c0 .052.004.105.004.159 0 1.875-1.515 3.396-3.39 3.396-1.635 0-3.016-1.173-3.331-2.727L.436 15.27C1.862 20.307 6.486 24 11.979 24c6.627 0 11.999-5.373 11.999-12S18.605 0 11.979 0zM7.54 18.21l-1.473-.61c.262.543.714.999 1.314 1.25 1.297.539 2.793-.076 3.332-1.375.263-.63.264-1.319.005-1.949s-.75-1.121-1.377-1.383c-.624-.26-1.29-.249-1.878-.03l1.523.63c.956.4 1.409 1.5 1.009 2.455-.397.957-1.497 1.41-2.454 1.012H7.54zm11.415-9.303c0-1.662-1.353-3.015-3.015-3.015-1.665 0-3.015 1.353-3.015 3.015 0 1.665 1.35 3.015 3.015 3.015 1.663 0 3.015-1.35 3.015-3.015zm-5.273-.005c0-1.252 1.013-2.266 2.265-2.266 1.249 0 2.266 1.014 2.266 2.266 0 1.251-1.017 2.265-2.266 2.265-1.253 0-2.265-1.014-2.265-2.265z"/>
          </svg>
          Login with Steam
        </a>
      )}

      <button
        id="mobile-menu-btn"
        type="button"
        class="md:hidden p-2 text-[#6b6b6b] hover:text-[#d1d1d1] transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
      <ul class="flex flex-col gap-4">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="block font-mono text-sm text-[#6b6b6b] hover:text-[#d1d1d1] tracking-wider uppercase transition-colors"
            >
              {link.label}
            </a>
          </li>
        ))}
        <li>
          <a
            href="https://store.steampowered.com/app/4193250/One_Less_Choice/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-5 py-2 steam-btn text-[#66c0f4] text-sm tracking-wider uppercase"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M11.979 0C5.678 0 .511 4.86.022 11.037l6.432 2.658c.545-.371 1.203-.59 1.912-.59.063 0 .125.004.188.006l2.861-4.142V8.91c0-2.495 2.028-4.524 4.524-4.524 2.494 0 4.524 2.031 4.524 4.527s-2.03 4.525-4.524 4.525h-.105l-4.076 2.911c0 .052.004.105.004.159 0 1.875-1.515 3.396-3.39 3.396-1.635 0-3.016-1.173-3.331-2.727L.436 15.27C1.862 20.307 6.486 24 11.979 24c6.627 0 11.999-5.373 11.999-12S18.605 0 11.979 0zM7.54 18.21l-1.473-.61c.262.543.714.999 1.314 1.25 1.297.539 2.793-.076 3.332-1.375.263-.63.264-1.319.005-1.949s-.75-1.121-1.377-1.383c-.624-.26-1.29-.249-1.878-.03l1.523.63c.956.4 1.409 1.5 1.009 2.455-.397.957-1.497 1.41-2.454 1.012H7.54zm11.415-9.303c0-1.662-1.353-3.015-3.015-3.015-1.665 0-3.015 1.353-3.015 3.015 0 1.665 1.35 3.015 3.015 3.015 1.663 0 3.015-1.35 3.015-3.015zm-5.273-.005c0-1.252 1.013-2.266 2.265-2.266 1.249 0 2.266 1.014 2.266 2.266 0 1.251-1.017 2.265-2.266 2.265-1.253 0-2.265-1.014-2.265-2.265z"/>
            </svg>
            Steam
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
