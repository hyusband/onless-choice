# Get your Steam API key from: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key_here

# Auth.js Configuration
AUTH_SECRET=your_random_secret_here_generate_with_openssl_rand_base64_32
AUTH_TRUST_HOST=true

# Database Configuration
# For local/development builds (Vercel, etc):
ASTRO_DATABASE_FILE=.astro/content.db

# For production with Astro Studio (optional):
# ASTRO_DB_REMOTE_URL=your_production_db_url
# ASTRO_DB_APP_TOKEN=your_app_token
